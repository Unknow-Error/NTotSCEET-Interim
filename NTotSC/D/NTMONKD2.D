BEGIN ~NTMONKD2~

IF WEIGHT #0 ~RandomNum(2,1)~ THEN BEGIN 0
  SAY @0
  IF ~~ THEN EXIT
END

IF WEIGHT #3 ~RandomNum(2,2)~ THEN BEGIN 1
  SAY @1
  IF ~~ THEN EXIT
END

IF WEIGHT #1 ~StateCheck(Myself,STATE_CHARMED)~ THEN BEGIN 2
  SAY @2
  IF ~~ THEN EXIT
END

IF WEIGHT #2 ~False()~ THEN BEGIN 3
  SAY @3
  IF ~~ THEN EXIT
END
